<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find line_rot_slam)/xacro/robot.xacro"/>
  <arg name="robot_x" default="-7.0"/>
  <arg name="robot_y" default="0.0"/>
  <arg name="robot_z" default="0.2"/>
  <arg name="robot_yaw" default="0.0" />

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aws_robomaker_small_house_world)/worlds/small_house.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
    <arg name="verbose" default="false"/>
  </include>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" output="screen" args="-urdf -model robot -x $(arg robot_x) -y $(arg robot_y) -z $(arg robot_z) -Y $(arg robot_yaw) -param robot_description"/>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen"/>
</launch>
